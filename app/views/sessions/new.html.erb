<%= render 'shared/content_title', title: 'Login' %>
<div class='well'> 
  <%= form_tag '/login' do %> <!-- '/login' is to specify that the form is going to be an http post to the '/login' path -->
    <div class ='control-group'>
      <%= label_tag :username %>
      <%= text_field_tag :username,params[:username] || ''%> <!--the params is use to display the value originally put in even if it renders an error  -->
    </div>

    <div class='control-group'>
      <%= label_tag :password %>  
      <%= password_field_tag :password, params[:password] || '' %>
    </div>
    <%=submit_tag "Login", class: 'btn btn-success'%>
  <% end  %>
</div>