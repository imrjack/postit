<% if @post.errors.any? %>

  <div class = 'row'>
    <div class='alert alert-error span8'>
      <h5>The following errors needs attention:</h5>
      <% @post.errors.full_messages. each do |msg| %>
        <ul>  
          <li><%= msg %></li> 
        </ul>
      <% end %>
    </div>
  </div>
<% end %>

<div class= 'well'>
  <%= form_for @post do |f| %>
    <div class='control-group'>
      <%=  f.label :title  %>
      <%=  f.text_field :title %>
    </div>
    
    <p>
      <div class='control-group'>
        <%= f.label :url %>
        <%=  f.text_field :url %>
      </div>
    </p>
    
    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows:5%>
    </div>

<p>
  <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary') %>
</p>

  <% end %>
  
</div>
