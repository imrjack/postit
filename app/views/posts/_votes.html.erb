<% if !logged_in?%>
    <%=link_to "Vote", root_path(error:"Must be logged in to vote") %>
 <% elsif voteable_type == 'comment' %>
  <% if obj.votes.where(user_id:current_user).exists?%>
    <%= obj.total_votes %> votes </br>
    <%= link_to "Unvote",unvote_post_comment_path(obj.post,obj), method: 'delete' %>
  <% else %>
    <%=link_to vote_post_comment_path(obj.post,obj,vote: true), method: 'post'  do %>
      <i class='icon-arrow-up'></i></br>
    <% end %>
    <%= obj.total_votes %> Votes</br>
    <%=link_to vote_post_comment_path(obj.post,obj,vote: false), method: 'post' do %>  
      <i class='icon-arrow-down'></i>
    <% end %>
  <% end %>

<% elsif voteable_type ==  'post' %>
  <% if obj.votes.where(user_id:current_user).exists? %>
      <%= obj.total_votes %> votes </br>
      <%= link_to "Unvote",unvote_post_path(obj), method: 'delete' %>
  <% else %>

    <%=link_to vote_post_path(post,vote: true), method: 'post'  do %>
      <i class='icon-arrow-up'></i></br>
    <% end %>
    <%= obj.total_votes %> Votes</br>
    <%=link_to vote_post_path(post,vote: false), method: 'post' do %>  
      <i class='icon-arrow-down'></i>
    <% end %>
  <% end %>

<% end %>



