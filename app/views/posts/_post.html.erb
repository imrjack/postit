

<div class = 'row'>
  <div class='span0 well text-center'>
    <%=  render 'posts/votes', voteable_type:'post',post:post,obj:post%>
  </div>
  <div class= 'container'>
    <div class='span8 well'>
      <%= render post.categories%>
      <h4><%= link_to post.title, fix_url(post.url) %> </h4>
      <p><%= post.description %></p>
      <p><%= render 'shared/creator', name:link_to(post.creator.username, user_path(post.creator)), time: display_datetime(post) %></p>
      <small>
        <span>
          <%= link_to("#{post.comments.size} comments", post_path(post)) %>
        </span>
      </small>
    </div>
  </div>
</div>
