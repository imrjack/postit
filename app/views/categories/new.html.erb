<%= render 'shared/content_title', title: 'Create A New Category' %>
<% if @category.errors.any? %>

  <div class = 'row'>
    <div class='alert alert-error span8'>
      <h5>The following errors needs attention:</h5>
      <% @category.errors.full_messages. each do |msg| %>
        <ul>  
          <li><%= msg %></li> 
        </ul>
      <% end %>
    </div>
  </div>
<% end %>

<div class='well'>

  <%=form_for @category do |f| %>
  <div class='control-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
    <%= f.submit :submit, class: 'btn btn-success' %>
 
  <% end %>

</div>